# Makefile for C++ Rserve clients.
#
# $Id: Makefile.in 175 2006-11-28 22:09:46Z urbanek $

SRC = $(wildcard *.cc)
OBJ = $(SRC:%.cc=%.o)
DST = demo1 rcons

CXXFLAGS+=-I../include -I.. -I.
LIBS+=@LIBS@

all: $(DST)

demo1: Rconnection.o demo1.o
	$(CXX) $^ -o $@ $(LIBS)

rcons: Rconnection.o rcons.o
	$(CXX) $^ -o $@ $(LIBS)

rcmd: Rconnection.o rcmd.o
	$(CXX) $^ -o $@ $(LIBS)

debug:
	CXXFLAGS=-g $(MAKE) all

clean:
	rm -rf *~ *.o \#* .\#* $(DST)
