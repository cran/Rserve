# Makefile for C++ Rserve clients.
#
# $Id: Makefile.in,v 1.2 2005/06/06 03:59:22 urbaneks Exp $

SRC = $(wildcard *.cc)
OBJ = $(SRC:%.cc=%.o)
DST = demo1 rcons

CXXFLAGS+=-I../include -I.. -I.
LIBS+=@LIBS@
linkRL=@LINK_READLINE@

all: $(DST)

demo1: Rconnection.o demo1.o
	$(CXX) $^ -o $@ $(LIBS)

rcons: Rconnection.o rcons.o
	$(CXX) $^ -o $@ $(LIBS) $(linkRL)

rcmd: Rconnection.o rcmd.o
	$(CXX) $^ -o $@ $(LIBS) $(linkRL)

debug:
	CXXFLAGS=-g $(MAKE) all

clean:
	rm -rf *~ *.o \#* .\#* $(DST)
