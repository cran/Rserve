# Makefile for C++ Rserve clients - Win32 version
#
# $Id: Makefile.win,v 1.1 2004/09/26 21:51:16 urbaneks Exp $

SRC = $(wildcard *.cc)
OBJ = $(SRC:%.cc=%.o)
DST = demo1 rcons

CXXFLAGS+=-I../include -I../include/Win32 -I.. -I. -DWin32
LIBS+=-lwsock32
linkRL=

all: $(DST)

demo1: Rconnection.o demo1.o
	$(CXX) $^ -o $@ $(LIBS)

rcons: Rconnection.o rcons.o
	$(CXX) $^ -o $@ $(LIBS) $(linkRL)

debug:
	CXXFLAGS=-g $(MAKE) all

clean:
	rm -rf *~ *.o \#* .\#* $(DST)
